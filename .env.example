# BattInsight Environment Configuration
# Copy this file to .env and fill in appropriate values

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string
DATABASE_URI=postgresql://postgres:postgres@localhost:5432/battinsight
# For Docker environment
# DATABASE_URI=postgresql://postgres:postgres@postgres:5432/battinsight

# =============================================================================
# Security Settings
# =============================================================================
# Secret key for session management and security features
SECRET_KEY=your-secret-key-here

# =============================================================================
# API Keys
# =============================================================================
# OpenAI API key for natural language processing
OPENAI_API_KEY=your-openai-api-key-here

# Mapbox access token for map visualization
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token-here

# =============================================================================
# Application Settings
# =============================================================================
# Flask environment (development, production, testing)
FLASK_ENV=development
FLASK_APP=backend/app.py
FLASK_DEBUG=1

# React environment
REACT_APP_API_URL=http://localhost:5000
REACT_APP_MAPBOX_TOKEN=${MAPBOX_ACCESS_TOKEN}

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# Docker Configuration
# =============================================================================
# Docker Compose project name
COMPOSE_PROJECT_NAME=battinsight 